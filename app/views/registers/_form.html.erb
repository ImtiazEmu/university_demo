            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :student_id_card %>
      <br>
      <%= f.text_field :student_id_card %>
    </div>

    <div class="field">
      <%= f.label :semester_no %>
      <br>
